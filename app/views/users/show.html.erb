<% provide(:title, @user.name) %>

<div class="row user_info">
  <aside class="col-md-4">
    <button class="btn-link" id="picture-<%= @user.id %>" data-toggle = "modal" data-target = "#userModal-<%= @user.id %>">
      <div class="icon">
      <%= icon(@user, 200) %>
      </div>
    </button>
    <%= render 'users/user_modal', user: @user %>
  </aside>
  <div class="col-md-8">
    <h1>
      <%= @user.name %>
      <% if current_user?(@user) %>
        <%= link_to "プロフィール 編集", edit_user_path(current_user), class: "btn btn-primary btn-edit" %>
      <% else %>
        <%= render 'users/follow_form', user: @user if logged_in? %>
      <% end %>
    </h1>
    <%= render 'shared/stats', user: @user %>
    <div class="user-introduction">
      <h2>
        <%= @user.account_name %>
      </h2>
      <% if @user.introduction.present? || @user.website.present? %>
        <%= simple_format(@user.introduction) %>
        <%= link_to @user.website, @user.website %>
      <% elsif current_user?(@user) %>
        <span>
          プロフィール編集より、自己紹介や、
          <p>ウェブサイトのURLを登録できます。</p>
        </span>
      <% end %>
    </div>
  </div>
</div>
<div class="row">
  <% if @user.posts.any? %>
    <h3><%= @minititle %>(<%= @posts.count %>)</h3>
    <div class="posts">
      <%= render @posts %>
    </div>
    <div class="pagination-box">
      <%= will_paginate @posts %>
    </div>
  <% end %>
</div>
