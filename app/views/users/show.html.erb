<% provide(:title, @user.name) %>

<div class="row user_info">
  <aside class="col-md-4">
    <button class="user_picture btn-dark" id="picture-<%= @user.id %>" data-toggle = "modal" data-target = "#userModal-<%= @user.id %>">
      <%= icon(@user, 200) %>
    </button>
  </aside>
  <div class="col-md-8">
    <h1>
      <%= @user.name %>
      <%= link_to "プロフィール 編集", edit_user_path(current_user), class: "btn btn-primary" if current_user?(@user) %>
      <%= render 'users/follow_form' if logged_in? %>
    </h1>
    <%= render 'shared/stats' %>
    <h2>
      <%= @user.user_name %>
    </h2>
    <%=simple_format(@user.introduction)%>
    <a href= <%= @user.website %> ><%= @user.website %></a>
  </div>
</div>
  <div class="row">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.posts.any? %>
      <h3>Microposts (<%= @user.posts.count %>)</h3>
      <ol class="posts">
        <%= render @posts %>
      </ol>
      <%= will_paginate @posts %>
    <% end %>
  </div>
