<% provide(:title, "パスワード変更") %>

<h1>パスワード変更</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @user, url: {controller: 'users', action: 'update_password'} , local: true) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :present_password,"現パスワード" %>
      <%= f.password_field :present_password, class: 'form-control' %>

      <%= f.label :password,"新パスワード" %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :password_confirmation, "新パスワード（再入力）" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>

      <%= f.submit "パスワードを更新する", class: "btn btn-lg btn-primary" %>
    <% end %>
  </div>
</div>
