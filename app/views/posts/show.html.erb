<% provide(:title, "post-#{@post.id}") %>

<div class="post-show row">
  <ul class="users post-user">
    <li>
      <div class="icon">
        <%= icon(@post.user, 50) %>
      </div>
      <%= link_to @post.user.name, @post.user %>
    </li>
  </ul>
  <div class="col-md-8">
    <div class="post-image">
      <%= image_tag @post.image if @post.image.attached? %>
    </div>
    <div class="post-data">
      お気に入り:
      <strong id="likers">
        <%= @post.likers.count %>
      </strong>
      <span class="time-span">
        <%= time_ago_in_words(@post.created_at) %>
      </span>
    </div>
  </div>
  <div class="col-md-4">
    <div class="post-content">
      <%= simple_format(@post.content) %>
    </div>
    <div>
      <% unless current_user?(@post.user) %>
        <%= render 'like_form', post: @post if logged_in? %>
      <% else %>
        <%= link_to "削除", @post, method: :delete, class: "btn btn-danger btn-lg",
                                    data: { confirm: "本当に削除しても、よろしいでしょうか？" } %>
      <% end %>
    </div>
  </div>
</div>
