<button class="garally" id="post-<%= post.id %>" data-toggle = "modal" data-target = "#Modal-<%= post.id %>">
  <%= image_tag post.display_image, alt: "post" if post.image.attached? %>
  <div class="likes row">
    <div class="col-md-6">お気に入り: <strong><%= post.likers.count %></strong></div>
    <div class="col-md-6">コメント: <strong><%= post.comments.count %></strong></div>
  </div>
</button>
<%= render 'posts/post_modal', post: post, user: post.user %>
